<Grid x:Class="OC.Assistant.Controls.Modal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="#01000000"
        VerticalAlignment="Stretch"
        HorizontalAlignment="Stretch">
    <Grid.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0" To="1"
                Duration="0:0:0.1" />
        </Storyboard>
        <Storyboard x:Key="FadeOutStoryboard">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="1" To="0"
                Duration="0:0:0.2" />
        </Storyboard>
    </Grid.Resources>
    <Grid.Effect>
        <DropShadowEffect Color="Black" BlurRadius="20" Direction="315" ShadowDepth="5" Opacity="0.5"/>
    </Grid.Effect>
    <Border Background="{DynamicResource BackgroundOverlayBrush}" 
            BorderBrush="{DynamicResource White5Brush}"
            CornerRadius="{DynamicResource ControlCornerRadius}"
            BorderThickness="0" VerticalAlignment="Center" HorizontalAlignment="Center"
            x:Name="Border">
        <Grid Margin="3" MinWidth="360" MinHeight="160" MaxHeight="560">
            <Grid.RowDefinitions>
                <RowDefinition Height="27" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Background="{DynamicResource BackgroundOverlayBrush}">
                <Label HorizontalAlignment="Left" Margin="6,6,0,0" >
                    <TextBlock Name="TitleLabel"/>
                </Label>
            </Grid>
            <Label x:Name="SymbolWarning" Margin="20" Grid.Row="1" Grid.Column="0" FontFamily="{DynamicResource SymbolThemeFontFamily}" FontSize="46" 
                   Foreground="{DynamicResource WarningBrush}"
                   Visibility="Collapsed">
                &#xE7BA;
            </Label>
            <Label x:Name="SymbolError" Margin="20" Grid.Row="1" Grid.Column="0" FontFamily="{DynamicResource SymbolThemeFontFamily}" FontSize="46" 
                   Foreground="{DynamicResource DangerBrush}"
                   Visibility="Collapsed">
                &#xE783;
            </Label>
            <Label x:Name="SymbolQuestion" Margin="20" Grid.Row="1" Grid.Column="0" FontFamily="{DynamicResource SymbolThemeFontFamily}" FontSize="46" 
                   Foreground="{DynamicResource InfoBrush}"
                   Visibility="Collapsed">
                &#xF142;
            </Label>
            <Label x:Name="SymbolInformation" Margin="20" Grid.Row="1" Grid.Column="0" FontFamily="{DynamicResource SymbolThemeFontFamily}" FontSize="46" 
                   Foreground="{DynamicResource InfoBrush}"
                   Visibility="Collapsed">
                &#xE946;
            </Label>
            <ScrollViewer Grid.Row="1" Grid.Column="1">
                <Grid x:Name="ContentGrid" Margin="10,5,20,5" />
            </ScrollViewer>
            
            <Grid Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="0" >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="6">
                    <Button Name="ButtonOk" Content="OK" MinWidth="70" Height="32" Click="ButtonOnClick" Background="{DynamicResource White6Brush}"/>
                    <Button Name="ButtonCancel" Content="Cancel" MinWidth="70" Height="32" Click="ButtonOnClick" Background="{DynamicResource White6Brush}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Grid>