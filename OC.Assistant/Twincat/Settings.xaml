<StackPanel x:Class="OC.Assistant.Twincat.Settings"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:twincat="clr-namespace:OC.Assistant.Twincat"
            mc:Ignorable="d"
            d:DesignHeight="300" d:DesignWidth="300"
            Margin="5 20 5 20">
    <Label Margin="4 0 0 0">PlcName</Label>
    <twincat:SettingsPlcDropdown x:Name="PlcDropdown" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0 5 0 10">
    </twincat:SettingsPlcDropdown>
    <Label Margin="4 0 0 0">PlcTaskName</Label>
    <twincat:SettingsTaskDropdown x:Name="TaskDropdown" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0 5 0 10">
    </twincat:SettingsTaskDropdown>
</StackPanel>