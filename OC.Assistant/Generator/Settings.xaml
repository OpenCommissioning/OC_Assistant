<StackPanel x:Class="OC.Assistant.Generator.Settings"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:generator="clr-namespace:OC.Assistant.Generator"
            mc:Ignorable="d"
            d:DesignHeight="300" d:DesignWidth="300"
            Margin="5 20 5 20">
    <Label Margin="4 0 0 0">PlcName</Label>
    <generator:SettingsPlcDropdown x:Name="PlcDropdown" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0 5 0 10">
    </generator:SettingsPlcDropdown>
    <Label Margin="4 0 0 0">PlcTaskName</Label>
    <generator:SettingsTaskDropdown x:Name="TaskDropdown" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0 5 0 10">
    </generator:SettingsTaskDropdown>
</StackPanel>