<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <UseWPF>true</UseWPF>
        <Company>Spiratec AG</Company>
        <LangVersion>default</LangVersion>
        <TargetFramework>net8.0-windows</TargetFramework>
        <ApplicationIcon>Resources\oc_logo.ico</ApplicationIcon>
        <Version>1.11.2</Version>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DebugType>none</DebugType>
    </PropertyGroup>
    
    <ItemGroup>
      <EmbeddedResource Include="Resources\OC.TcTemplate.zip" />
    </ItemGroup>
    
    <ItemGroup>
      <PackageReference Include="Microsoft.VisualStudio.Shell.Interop" Version="17.12.40391" />
      <PackageReference Include="OC.Assistant.Sdk" Version="1.6.1" />
      <PackageReference Include="OC.Assistant.Theme" Version="1.4.9" />
      <PackageReference Include="TCatSysManagerLib" Version="3.3.1" />
    </ItemGroup>
    
    <ItemGroup>
      <Page Update="Controls\VersionCheck.xaml">
        <Generator>MSBuild:Compile</Generator>
        <XamlRuntime>Wpf</XamlRuntime>
        <SubType>Designer</SubType>
      </Page>
    </ItemGroup>
    
</Project>